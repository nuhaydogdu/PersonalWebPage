<div id="journal">

    <div class='title'>

        <h2>MY BLOGS</h2>

        <!--divider-->
        <div class='divider-draft center'></div>
        <!--/divider-->
    </div>

    <div class="journal-block">
        <div class="row">

            <% bloglar.forEach(blog=> { %>
                <div class="journal-info">
                    <div class="journal-img">
                        <a href="/blogs/<%-blog.slug%> "><img src="/uploads/images/<%-blog.image%> "
                                class="img-responsive" alt="img"></a>
                    </div>
                    <div class="journal-txt">

                        <h4><a href="blog">
                                <%- blog.title %>
                            </a></h4>
                        <p class="separator">
                            <%- blog.description %>
                        </p>
                    </div>
                </div>

                <% }) %>
        </div>
        <div class="col-lg-3 col-12 right-single">
            <div class="widget-search">
                <div class="site-search-area">
                    <form method="get" id="site-searchform" action="#">
                        <div>
                            <input class="input-text form-control" name="search-k" id="search-k"
                                placeholder="Search keywords..." type="text">
                            <button id="searchsubmit" value="Search" type="submit"><i
                                    class="fa-sharp fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="widget-categories">
                <h3 class="widget-title">Categories</h3>
                <ul>
                    <% categories.forEach(element => { %>
                        <li><a href="/"><%- element.category %> </a></li>
                    <% }) %>
                   

                </ul>
            </div>
        </div>
    </div>

    <div> 
        <% if (pages >0) { %>
         
            <ul class="nav tm-paging-links">

                <% for( let i = 1; i <= pages; i++ ) { %>
                    <% if (current == i ) { %>
                        <li class="nav-item active"><a href="/blogs/?page= <%- i %>" class="nav-link tm-paging-link"><%- i %> </a></li>
                    <% } else if (i < pages) { %>
                        <li class="nav-item "><a href="/blogs/?page= <%- i %> " class="nav-link tm-paging-link"><%- i %> </a></li>
                    <% } else { %>
                        <li class="nav-item "><a href="/blogs/?page= <%- i %> " class="nav-link tm-paging-link"> > </a></li>
                    <% } %>
                <% } %>
                
            </ul>

        <% } %>
    </div>
    

</div>